<html lang="en" data-theme="dark">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="{{ '/assets/css/styles.css' | url }}" />
        <!-- Grab title from the page data and dump it here -->
        <title>{{ title }}</title>
    </head>
    <body>
        {# Header #} {% include "partials/header.njk" %}

        <!-- Grab the content from the page data, dump it here, and mark it as safe -->
        <!-- Safe docs: https://mozilla.github.io/nunjucks/templating.html#safe -->
        <div class="mt-[60px]">
            {{ content | safe }}
        </div>

        <script src="{{ '/assets/js/bundle.js' | url }}"></script>
    </body>
</html>
